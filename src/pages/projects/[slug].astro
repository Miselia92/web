---
import Layout from '@/layouts/Layout.astro';
import { getProjects } from '@/lib/content-tina';
import { RichText } from '@/components/tina/RichText';

export async function getStaticPaths() {
  const projects = await getProjects();
  return projects.map((project) => ({
    params: { slug: project._sys.filename },
    props: { project },
  }));
}

const { project } = Astro.props;
const { title, year, body, images } = project;
---

<Layout title={`${title} | Mark Power`}>
  <div class="px-6 md:px-12 py-12 max-w-7xl mx-auto">
    
    <div class="mb-16 md:w-2/3">
      <h1 class="text-3xl md:text-5xl font-light mb-6 uppercase tracking-wide">{title}</h1>
      <div class="text-sm md:text-base leading-relaxed text-muted-foreground space-y-4 max-w-prose">
        <p class="text-muted-foreground mb-6">{year}</p>
        <RichText content={body} client:visible />
      </div>
    </div>

    {images && images.length > 0 && (
      <div class="space-y-12 md:space-y-24">
        {images.map((image, index) => (
          <div class="w-full">
            <img 
              src={image} 
              alt={`${title} - Image ${index + 1}`}
              class="w-full h-auto"
            />
          </div>
        ))}
      </div>
    )}

  </div>
</Layout>
