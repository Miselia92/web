---
import Layout from '@/layouts/Layout.astro';
import { getPage } from '@/lib/content-tina';

const page = await getPage('connect.md');
const { title, sections } = page;
---

<Layout title={`${title} | Mark Power`}>
  <div class="px-6 md:px-12 py-12 max-w-4xl mx-auto text-center">
    <h1 class="text-3xl font-light mb-12 uppercase tracking-wide">{title}</h1>
    
    <div class="grid md:grid-cols-2 gap-12 text-left">
      {sections?.map((section) => (
        <div>
          <h2 class="text-xs font-bold uppercase tracking-widest text-muted-foreground mb-4">{section.title}</h2>
          <p class="text-lg font-light mb-2">{section.name}</p>
          <p class="text-muted-foreground">{section.address}</p>
          {section.email && (
            <a href={`mailto:${section.email}`} class="block mt-4 text-foreground hover:opacity-60 transition-opacity">{section.email}</a>
          )}
          {section.link && (
            <a href={section.link} class="block mt-4 text-foreground hover:opacity-60 transition-opacity">{section.linkText || 'Visit'}</a>
          )}
        </div>
      ))}
    </div>
  </div>
</Layout>
