---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const page = await getEntry('pages', 'about');
const { Content } = await page.render();
---

<Layout title={`${page.data.title} | Mark Power`}>
  <div class="px-6 md:px-12 py-12 max-w-7xl mx-auto flex flex-col md:flex-row gap-12">
    <div class="md:w-1/3">
      <div class="aspect-[3/4] bg-gray-100 w-full relative">
        <!-- Placeholder for Portrait -->
        {page.data.portraitImage ? (
          <img 
            src={page.data.portraitImage} 
            alt="Portrait of Mark Power" 
            class="w-full h-full object-cover"
          />
        ) : (
          <div class="absolute inset-0 flex items-center justify-center text-gray-300 uppercase tracking-widest text-xs">
            Portrait
          </div>
        )}
      </div>
    </div>
    
    <div class="md:w-2/3">
      <h1 class="text-3xl font-light mb-8 uppercase tracking-wide">{page.data.title}</h1>
      <div class="prose prose-stone prose-lg max-w-none text-gray-700 font-light">
        <Content />
      </div>
    </div>
  </div>
</Layout>
