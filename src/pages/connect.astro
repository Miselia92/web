---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const page = await getEntry('pages', 'connect');
---

<Layout title={`${page.data.title} | Mark Power`}>
  <div class="px-6 md:px-12 py-12 max-w-4xl mx-auto text-center">
    <h1 class="text-3xl font-light mb-12 uppercase tracking-wide">{page.data.title}</h1>
    
    <div class="grid md:grid-cols-2 gap-12 text-left">
      {page.data.sections?.map((section) => (
        <div>
          <h2 class="text-xs font-bold uppercase tracking-widest text-gray-400 mb-4">{section.title}</h2>
          <p class="text-lg font-light mb-2">{section.name}</p>
          <p class="text-gray-600">{section.address}</p>
          {section.email && (
            <a href={`mailto:${section.email}`} class="block mt-4 text-black hover:opacity-60 transition-opacity">{section.email}</a>
          )}
          {section.link && (
            <a href={section.link} class="block mt-4 text-black hover:opacity-60 transition-opacity">{section.linkText || 'Visit'}</a>
          )}
        </div>
      ))}
    </div>
  </div>
</Layout>
