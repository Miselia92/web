---
import Layout from '@/layouts/Layout.astro';
import { getAbout } from '@/lib/content-tina';
import { RichText } from '@/components/tina/RichText';

const page = await getAbout();
const { portraitImage, title, body } = page;
---

<Layout title={`${title} | Mark Power`}>
  <div class="px-6 md:px-12 py-12 max-w-7xl mx-auto flex flex-col md:flex-row gap-12">
    <div class="md:w-1/3">
      <div class="aspect-[3/4] bg-muted w-full relative">
        <!-- Placeholder for Portrait -->
        {portraitImage ? (
          <img 
            src={portraitImage} 
            alt="Portrait of Mark Power" 
            class="w-full h-full object-cover"
          />
        ) : (
          <div class="absolute inset-0 flex items-center justify-center text-muted-foreground uppercase tracking-widest text-xs">
            Portrait
          </div>
        )}
      </div>
    </div>
    
    <div class="md:w-2/3">
      <h1 class="text-3xl font-light mb-8 uppercase tracking-wide">{title}</h1>
      <div class="prose prose-stone prose-lg max-w-none text-muted-foreground font-light">
        <RichText content={body} client:visible />
      </div>
    </div>
  </div>
</Layout>
